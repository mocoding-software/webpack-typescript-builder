{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "dist",
		"removeComments": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
    "jsx": "react",		
    "experimentalDecorators": true
	},
	"exclude": [
		"node_modules",
		"sample",
		"src/legacy"
	]
}
